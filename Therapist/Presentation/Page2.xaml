<Page x:Class="Therapist.Presentation.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Therapist.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="680"
      Title="Page2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Image Source="../Picture/Pic1.jpg" Grid.ColumnSpan="3" Grid.RowSpan="3" />
        <TextBlock  FontSize="23" FontFamily="Arial"
                   Style="{DynamicResource MaterialDesignHeadlineTextBlock}" TextWrapping="Wrap" Margin="0,0,75,0" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1">
                Основной целью создания работы данного программного средства является автоматизация работы врача и уменьшение количества бумажных документов.
        </TextBlock>

    </Grid>
</Page>
